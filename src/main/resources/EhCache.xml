<?xml version="1.0" encoding="UTF-8" ?>
<eh:config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns:eh='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core-3.3.xsd">

    <eh:cache-template name="DefaultTemplate">
        <eh:expiry>
            <eh:none/>
        </eh:expiry>
    </eh:cache-template>

    <eh:cache alias="postCache" uses-template="DefaultTemplate">
        <eh:key-type>java.lang.Long</eh:key-type>
        <eh:value-type>com.creheart.domain.Post</eh:value-type>
        <eh:heap unit="entries">500</eh:heap>
    </eh:cache>

</eh:config>